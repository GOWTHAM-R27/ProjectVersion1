        <form class="form" id="form" action="/auth/book" method="POST">
            <div class="form-control">
                <table class="table">
                    <tr>
                        <td><label >First Name:</label></td>
                        <td><input type="text" placeholder="Enter your name" id="fname" name="Fname" onkeyup="validatefname()">
                        <small id="fname-error"></small>
                        </td>
                        <td><label >Last Name:</label></td>
                        <td><input type="text" placeholder="Enter your name" id="lname" name="Lname" onkeyup="validatelname()">
                        <small id="lname-error"></small>
                        </td>
                    </tr>
                    <tr>
                        <td><label >Mobile no:</label></td>
                        <td><input type="text" placeholder="Enter your mobile no" id="phoneno1" name="MobileNo" onkeyup="validatephone1()">
                        <small id="number-error"></small>
                        </td>
                        <td><label >Alter Mobile no:</label></td>
                        <td><input type="text" placeholder="Enter your name" id="phoneno2" name="AlterNo" onkeyup="validatephone2()">
                        <small id="number2-error"></small>
                        </td>
                    </tr>
                    <tr>
                        <td><label>Email id:</label></td>
                        <td><input type="email" placeholder="Enter your email id" id="emailid" name="email" onkeyup="validateemail()">
                        <small id="email-error"></small>
                        </td>
                        <td><label>Date & Time:</label></td>
                        <td><input type="datetime-local" placeholder="select date and time" id="datetime" name="date_time" onsubmit="validatedays3()" required pattern="[0-9]">
                        <small id="dt-error"></small>
                        </td>
                    </tr>
                    <tr>
                        <td><label>Permanent address:</label></td>
                        <td><textarea rows="4" cols="22" placeholder="Enter your address" id="p_address" name="padd" onkeyup="validatepadd()"></textarea>
                        <br>
                        <small id="padd-error"></small>
                        </td>
                        <td><label>Event place address:</label></td>
                        <td><textarea rows="4" cols="22" placeholder="Enter your address" id="e_address" name="eadd" onkeyup="validateeadd()"></textarea>
                        <br>
                        <small id="eadd-error"></small>
                        </td>
                    </tr>
                    <tr>
                        <td><label>Category:</label></td>
                        <td><select class="select" id="categories" name="service" onsubmit="validatedays2()" required>
                            <option value="">--Select the Category--</option>
                            <option value="Pre wedding">Pre wedding</option>
                            <option value="Wedding">Wedding</option>
                            <option value="Portrait">Portrait</option>
                            <option value="Events">Event</option>
                            <option value="Products">Products</option>
                            <option value="Travel">Travel</option>
                        </select><br>
                        <small id="cat-error"></small>
                        </td>
                        <td><label>Days:</label></td>
                        <td><select class="select" id="day" name="days" onsubmit="validatedays()" required>
                            <option value="">--Select the days--</option>
                            <option value="one">1 Day</option>
                            <option value="Wedding">2 Days</option>
                            <option value="Portrait">More than 2 days</option>
                        </select><br>
                        <small id="days-error"></small>
                        </td>
                    </tr>
                </table>
            </div>
            <button type="submit" onclick="return validateform()">Submit</button>

        </form>

