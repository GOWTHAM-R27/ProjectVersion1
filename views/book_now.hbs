                document.getElementById("day").style.borderColor = "red";
                return false;
            }
            else{
                days.innerHTML='';
                document.getElementById("day").style.borderColor = "green";
                return true;
            }
        }
        
        function validateform()
        {
            if(!validatefname() || !validatelname() || !validateemail() || !validatephone() || !validatephone2()
            || !validatepadd() || !validateeadd() ||  !validatedays2() || !validatedays() || !validatedays3() ){
